{
    "typescript.tsdk": "./node_modules/typescript/lib",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/.gitignore": true,
        "**/.gitattributes": true,
        "**/*.js": { "when": "$(basename).ts" },
        "**/*/*.js": { "when": "$(basename).tsx" },
        "**/*.d.ts": { "when": "$(basename).ts" },
        "**/*/*.d.ts": { "when": "$(basename).tsx" },
        "**/*.js.map": true
    }
}